<h1>Listing bills</h1>

<table class="table table-bordered table-striped table-condensed ">
  <thead>
  <tr class="table info">
    <th>
      <div align="center"> Sl.
    </th>
    <th>
      <div align="center"> Store
    </th>
    <th>
      <div align="center"> Bought on
    </th>
    <th>
      <div align="center"> Amount
    </th>
    <th colspan="3">
      <div align="center"> Action
    </th>
  </tr>
  </thead>

  <tbody>
  <% @bills.each_with_index(1) do |bill, index| %>
      <tr>
        <td>
          <div align="right"> <%= index %>
        </td>
        <td> <%= bill.store.upcase %></td>
        <td>
          <div align="center"> <%= bill.bought_on.strftime("%d-%b-%Y") %></td>
        <td>
          <div align="right"> <%= number_to_currency(bill.total) %></td>
        <td>
          <div align="center"> <%= link_to 'Show', bill, class: "btn btn-info active btn-xs" %></td>
        <td>
          <div align="center"> <%= link_to 'Edit', edit_bill_path(bill), class: "btn btn-warning active btn-xs" %></td>
        <td>
          <div align="center"> <%= link_to 'Destroy', bill, method: :delete, data: {confirm: 'Are you sure you want to destroy the Bill?'}, class: "btn btn-danger active btn-xs" %>
        </td>
      </tr>
  <% end %>
  <td class="table info" colspan="4">
    <div align="right"> Total is <strong> <%= number_to_currency(@amount) %>
  </td>
  </tbody>

</table>

<br>

<%= link_to 'New Bill', new_bill_path, class: "btn btn-success active btn-xs" %>